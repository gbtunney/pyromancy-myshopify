<div class='page-width'>
  <div class='section-block section-block--padding'>
    {% if section.settings.title_enable %}
      <div class='section-block__header text-center'>
        <h4 class='h1--mini section-block__title'>{{ section.settings.title }}</h4>
      </div>
    {% endif %}

    <div class='flex flex--grid flex--grid-center'>
      {% for block in section.blocks %}
        <div
          class='flex__item flex__item--fixed flex flex--center-vertical one-half medium-up--one-quarter text-center'
          {{ block.shopify_attributes }}>
          <div class='flex__item'>
            <div class='image-block'>
              {% if block.settings.image != blank %}
                <img
                  src='{{ block.settings.image | img_url: '250x250' }}'
                  alt='{{ block.settings.image.alt }}'
                  class='image-block__image'>
              {% else %}
                <div class='image-block__image'>
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>

    {% if section.blocks.size == 0 %}
      {% include 'no-blocks' %}
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Logo list",
  "class": "index-section",
  "max_blocks": 20,
  "settings": [
    {
      "type": "checkbox",
      "id": "title_enable",
      "label": "Show header",
      "default": true
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Logo list"
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Logo list",
      "category": "Image",
      "blocks": [
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        }
      ]
    }
  ]
}
{% endschema %}
